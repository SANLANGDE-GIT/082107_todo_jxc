<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.jxc.dao.PurchaseListDao">
    <resultMap id="BaseResultMap" type="com.atguigu.jxc.entity.PurchaseList">
        <result column="return_list_id" property="purchaseListId" jdbcType="INTEGER" />
        <result column="return_number" property="purchaseNumber" jdbcType="VARCHAR" />
        <result column="amount_paid" property="amountPaid" jdbcType="DOUBLE" />
        <result column="amount_payable" property="amountPayable" jdbcType="DOUBLE" />
        <result column="return_date" property="purchaseDate" jdbcType="VARCHAR" />
        <result column="remarks" property="remarks" jdbcType="VARCHAR" />
        <result column="state" property="state" jdbcType="INTEGER" />
        <result column="supplier_id" property="supplierId" jdbcType="INTEGER" />
        <result column="user_id" property="userId" jdbcType="INTEGER" />
        <result column="supplier_name" property="supplierName" jdbcType="VARCHAR" />
        <result column="true_name" property="trueName" jdbcType="VARCHAR" />
    </resultMap>
    <select id="list" resultMap="BaseResultMap">
        SELECT
            t1.purchase_list_id,
            t1.purchase_number,
            t1.amount_paid t1.purchase_date,
            t1.remarks,
            t1.state,
            t1.user_id,
            t2.supplier_id,
            t2.supplier_name,
            t4.true_name
        FROM
            t_purchase_list t1
                LEFT JOIN t_supplier t2
                          ON t1.supplier_id = t2.supplier_id
                LEFT JOIN t_sale_list t3
                          ON t1.user_id = t3.user_id
                LEFT JOIN t_user t4
                          ON t1.user_id = t4.user_id
        <where>

            <if test="purchaseNumber != null and purchaseNumber != ''">
                t1.purchase_list_id LIKE CONCAT('%', #{purchaseNumber}, '%')
            </if>

            <if test="supplierId != null and supplierId != ''">
                AND t1.supplier_id = #{supplierId}
            </if>

            <if test="state != null and state != ''">
                AND t1.state = #{state}
            </if>

            <if test="sTime != null and sTime != ''">
                AND t1.purchase_date >= #{sTime}
            </if>

            <if test="eTime != null and eTime != ''">
                AND t1.purchase_date &lt;= #{eTime}
            </if>

        </where>


    </select>
</mapper>